{% extends 'base.html.twig' %}


{% block title %}{{ annonce.jeu }} - {{ annonce.title }}{% endblock %}



{% block body %}


<div class="back">

    <div class="page">

        <h1 class="title">{{ annonce.title }}</h1>

        <p class="date">{{ annonce.date |date('d-m-Y') }} </p>

        <textarea spellcheck="false" wrap="soft" class="content">{{ annonce.content }}</textarea>

        {% if annonce.link != null %}
            <a class="link" target="_blank" href="{{ annonce.link }}">Voir le trailer</a>
        {% endif %}

        {% for commentaire in annonce.comments  %}
            <div class="comment">
                <p class="author">{{ commentaire.author }}</p>
                <p class="comment-content">{{ commentaire.content }}</p>
            </div>
        {% endfor %}

    </div>

</div>


{% endblock %}